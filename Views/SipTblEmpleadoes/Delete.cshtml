@model SIPADE.Models.SipTblEmpleado

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Esta seguro que desea eliminar el empleado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombres
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpNombres)
        </dd>
        <dt class="col-sm-2">
            Apellidos
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpApellidos)
        </dd>
        <dt class = "col-sm-2">
            NIT
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpNit)
        </dd>
        <dt class = "col-sm-2">
            DPI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpDpi)
        </dd>
        <dt class = "col-sm-2">
            Teléfono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpTel)
        </dd>
        <dt class = "col-sm-2">
            Dirección
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpDireccion)
        </dd>
        <dt class = "col-sm-2">
            IGSS
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpNumigss)
        </dd>
        <dt class = "col-sm-2">
            IRTRA
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmpNumirtra)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SipTblEmpId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
