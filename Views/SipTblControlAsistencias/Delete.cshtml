@model SIPADE.Models.SipTblControlAsistencia

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Esta seguro que desea eliminar la asistencia?</h3>
<div>
    <h4>Control Asistencia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha y Hora Entrada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblCasFechaHoraEntrada)
        </dd>
        <dt class="col-sm-2">
            Fecha y Hora Salida
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblCasFechaHoraSalida)
        </dd>
        <dt class="col-sm-2">
            ID Empleado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SipTblEmp.SipTblEmpId)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SipTblCasId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
