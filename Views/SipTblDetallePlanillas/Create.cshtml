@model SIPADE.Models.SipTblDetallePlanilla

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Detalle Planilla</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SipTblDplId" class="control-label">Codigo Detalle de Planilla</label>
                <input asp-for="SipTblDplId" class="form-control" required/>
                <span asp-validation-for="SipTblDplId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SipTblEplId" class="control-label">Codigo de empleado</label>
                <select asp-for="SipTblEplId" class ="form-control" asp-items="ViewBag.SipTblEplId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SipTblTreId" class="control-label">Codigo de trabajo realizado</label>
                <select asp-for="SipTblTreId" class ="form-control" asp-items="ViewBag.SipTblTreId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SipTblDedDeducciones" class="control-label">Deducciones</label>
                <input asp-for="SipTblDedDeducciones" class="form-control" required/>
                <span asp-validation-for="SipTblDedDeducciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SipTblDplBonificacion" class="control-label">Bonificación</label>
                <input asp-for="SipTblDplBonificacion" class="form-control" required/>
                <span asp-validation-for="SipTblDplBonificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SipTblDplIgss" class="control-label">IGSS</label>
                <input asp-for="SipTblDplIgss" class="form-control" required/>
                <span asp-validation-for="SipTblDplIgss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SipTblDplIrtra" class="control-label">IRTRA</label>
                <input asp-for="SipTblDplIrtra" class="form-control" required/>
                <span asp-validation-for="SipTblDplIrtra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SipTblDplIsr" class="control-label">ISR</label>
                <input asp-for="SipTblDplIsr" class="form-control" required/>
                <span asp-validation-for="SipTblDplIsr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SipTblDplOtros" class="control-label">Otros</label>
                <input asp-for="SipTblDplOtros" class="form-control" required/>
                <span asp-validation-for="SipTblDplOtros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
